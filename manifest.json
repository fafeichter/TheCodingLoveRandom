{
  "manifest_version": 3,
  "name": "TheCodingLoveRandom",
  "description": "TheCodingLoveRandom is just a fun-made Chrome Extension that allows you to watch coding memes from TheCodingLove.com.",
  "version": "1.0",
  "action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://thecodinglove.com/*",
        "http://thecodinglove.com/*"
      ],
      "js": [
        "jquery-3.2.1.min.js",
        "content.js",
        "popup.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}